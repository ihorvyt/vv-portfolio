---
import '../styles/default.css';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" id="box">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- Include AmbientLightBg.min.js -->
		<title>{title}</title>
		<script is:inline src="/vv-portfolio/AmbientLightBg.min.js"></script>

		<!-- Unbounded  Geologica-->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Geologica:wght@100..900&family=Unbounded:wght@200..900&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot>
			Nothing here
		</slot>

		<script is:inline>
			new Color4Bg.AmbientLightBg({
				dom: "box",
				colors: ["#ff0f28", "#ff15c5", "#ff3aff", "#f5070e", "#fe1010", "#f756f7"],
				loop: true,
				performance: {
					maxFPS: 15, // Limit FPS to reduce load
					quality: "low" // Lower quality on mobile
				}
			});
		</script>
	</body>
</html>